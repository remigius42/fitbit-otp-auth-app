# editorconfig.org
# partially based on https://prettier.io/docs/en/configuration.html#editorconfig

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.md]
trim_trailing_whitespace = false # allows line breaks with two consecutive spaces
